<launch>

    <!-- parameters -->
    <!-- <arg name="filename" default="DARPA.avi"/> -->
    <arg name="filename" default="big_buck_bunny_720p_30mb.mp4"/>
    <arg name="view"     default="false"/>


    <!-- launch video stream -->
    <include file="$(find video_stream_opencv)/launch/camera.launch" ns="/robot/sensors/">

        <!-- node name and ros graph name -->
        <arg name="camera_name" value="camera" />

        <!-- full path to the video file -->
        <!-- wget http://techslides.com/demos/sample-videos/small.mp4 -O /tmp/small.mp4 -->
        <arg name="video_stream_provider" value="$(find ltm)/test/media/video/$(arg filename)" />

        <!-- set camera fps to (video files not affected) -->
        <!-- <arg name="set_camera_fps" value="30"/> -->
        <!-- set buffer queue size of frame capturing to -->
        <arg name="buffer_queue_size" value="1000" />

        <!-- throttling the querying of frames to -->
        <arg name="fps" value="30" />

        <!-- setting frame_id -->
        <arg name="frame_id" value="/robot/sensors/camera_frame" />

        <!-- camera info loading, take care as it needs the "file:///" at the start , e.g.:
        "file:///$(find your_camera_package)/config/your_camera.yaml" -->
        <arg name="camera_info_url" value="" />

        <!-- flip the image horizontally (mirror it) -->
        <!-- flip the image vertically -->
        <arg name="flip_horizontal" value="false" />
        <arg name="flip_vertical" value="false" />

        <!-- visualize on an image_view window the stream generated -->
        <arg name="visualize" value="$(arg view)" />
    </include>

</launch>